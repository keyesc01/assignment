{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}List DVDs page{% endblock %}

{# ------------------------------------------------- #}
{% block listNavStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

<!-- start table for displaying DVD details -->
<h2>What is in the student db table</h2>

<table>
    <tr>
        <th> id </th>
        <th> username </th>
        <th> password </th>
        <th> joined </th>
        <th> last grade </th>
        <th> current grade</th>
    </tr>

{% for dvd in dvds %}
    <tr>
        <td>{{ dvd.id }}</td>
        <td>{{ dvd.username }}</td>
        <td>{{ dvd.password }}</td>
        <td>{{ dvd.joined }}</td>
        <td>{{ dvd.lastGrade }} </td>
        <td>{{ dvd.currentGrade }}</td>
    </tr>
{% endfor %}

</table>

{% endblock %}
