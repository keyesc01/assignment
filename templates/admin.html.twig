{% extends '_base.html.twig' %}

{% block title %}admin home{% endblock %}
{% block pageTitle %}insert page{% endblock %}

{# ------------------------------------------------- #}
{% block adminNavStyle %}current_page{% endblock %}


{% block main %}

    <h1>Welcome to the Admin home page !</h1>

    <h2>What is in the student db table</h2>
need add user, update , delete
    <table>
        <tr>
            <th> id </th>
            <th> username </th>
            <th> password </th>
            <th> joined </th>
            <th> last grade </th>
            <th> current grade</th>
        </tr>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.username }}</td>
                <td>{{ student.password }}</td>
                <td>{{ student.joined }}</td>
                <td>{{ student.lastGrade }} </td>
                <td>{{ student.currentGrade }}</td>
                <td>{{ student.date }}</td>
                <td><a href="/update/{{ student.id }}"><input type="button" value="update row"></a></td>
                <td>
                    <form>
                        <a href="/delete/{{ student.id }}"><input type="button" value="delete row"></a>
                    </form>
                </td>
            </tr>
        {% endfor %}

   </table>
<a href="/insert"><input type="button" value="Add to database"></a>

